<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shengbin.adenturetime">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Episodes"
            android:label="@string/title_activity_episodes"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shengbin.adenturetime.MainActivity" />
        </activity>
        <activity
            android:name=".DetailsChacarter"
            android:label="@string/title_activity_details_chacarter"
            android:parentActivityName=".ListaCharacters"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shengbin.adenturetime.ListaCharacters" />
        </activity>
        <activity
            android:name=".SpeciesActivity"
            android:label="@string/title_activity_species"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.shengbin.adenturetime.MainActivity" />
        </activity>
        <activity
            android:name=".Ocupation"
            android:label="@string/title_activity_ocupation"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shengbin.adenturetime.MainActivity" />
        </activity>
        <activity
            android:name=".ListaCharacters"
            android:label="@string/title_activity_lista_characters"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shengbin.adenturetime.MainActivity" />
        </activity>
        <activity
            android:name=".Like"
            android:label="@string/title_activity_like"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shengbin.adenturetime.MainActivity" />
        </activity>
    </application>

</manifest>
